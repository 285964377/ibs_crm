<?php
/**
 *商机来源管理
 */

namespace Home\Controller;
class OrginController extends BackController
{
    //商机来源列表
    public function index()
    {
        if ($_GET['index']) {
            $this->display();
        }
        if ($_GET['search_data']) {
            $data = M('origin')->select();
            foreach ($data as $key => $val) {
                foreach ($val as $k => $v) {
                    if ($k == 'id' || $k == 'pid') {
                        $data[$key][$k] = intval($v);
                    }
                }
            }
            $list['code'] = 200;
            $list['data'] = $data;
            echo json_encode($list, true);
        }
    }
    
    public function add()
    {
        if (IS_POST) {
            $data['name'] = I('post.name');
            $data['pid'] = I('post.pid');
			$where['name']=array('eq',$data['name']);
            $check = M('origin')->where($where)->find();
            if ($check) {
                $list['code'] = 'error';
                $list['msg'] = '商机来源存在重复';
                echo json_encode($list, true);
                exit;
            } else {
                M('origin')->add($data);
                $list['code'] = '200';
                $list['msg'] = '添加成功';
                echo json_encode($list, true);
                exit;
            }
        }
    }

    /**
     * 修改
     */
    public function edit()
    {
        if (IS_POST) {
            $id = I('post.id');
            $data['name'] = I('post.name');
            $where['name']=array('eq',$data['name']);
            $check = M('origin')->where($where)->find();
            if($check && $check['id']!=$id){
                $list['code']='error';
                $list['msg']='重复命名';
                echo json_encode($list,true);
                exit;
            }
            M('origin')->where('id='.$id)->save($data);
            $list['code'] = '200';
            $list['msg'] = '修改成功';
            echo json_encode($list, true);
            exit;
        }
    }

    //**删除
    public function delete()
    {
        $id = I('get.id');
        if ($id) {
            M('origin')->where('id=' . $id)->delete();
            $list['code'] = '200';
            $list['msg'] = '删除成功';
            echo json_encode($list, true);
            exit;
        }else{
            $list['code'] = 'error';
            $list['msg'] = '参数不存在';
            echo json_encode($list, true);
            exit;
        }
    }
}