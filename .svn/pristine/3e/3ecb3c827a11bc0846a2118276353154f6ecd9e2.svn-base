.head_top{
	width:6.4rem;
	height:3.5rem;
	display: block;
	margin:0 auto;
	margin-bottom:0.58rem;
}
.recharge_box{
	width:6rem;
	margin:0 auto;
}
.recharge_box h2{
	font-size:0.24rem;
	color:#333333;
	font-weight:100;
	padding-left:0.2rem;
	background:url(../images/i_left.jpg) no-repeat left center;
	background-size:0.05rem 0.2rem;
	margin-bottom:0.2rem;
}
.recharge_box_list{
	border:1px solid #d5d5d5;
	margin-bottom:0.18rem;
	padding-top:0.19rem;
	background:#fff;
}
.recharge_box_list li{
	width:5.6rem;
	margin:0 auto;
	height:0.64rem;
	line-height: 0.64rem;
	margin-bottom:0.19rem;
}
.recharge_box_list li span{
	text-align:center;
	font-size:0.24rem;
	color:#333333;
	letter-spacing:20px;
}
.recharge_box_list li input{
	width:4.27rem;
	padding:0 0.2rem;
	font-size:0.24rem;
	border:none;
	border:1px solid #d5d5d5;
	border-radius:4px;
}
.yes_recharge{
	display:block;
	width:6rem;
	height:0.88rem;
	margin:0 auto;
	line-height: 0.88rem;
	background:#0594d6;
	text-align:center;
	color:#fff;
	font-size:0.32rem;
	font-weight:100;
	margin-top:0.4rem;
	margin-bottom:0.84rem;
}