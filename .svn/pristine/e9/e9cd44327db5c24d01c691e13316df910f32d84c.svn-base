    //递归无限极分类
    public function roles($data, $pid = 0)
    {
        $arr = array();
        foreach ($data as $key => $val) {
            if ($val['pid'] == $pid) {
                $arr[$key] = $val;
                $arr[$key]['children'] = $this->roles($data, $val['id']);
            }
        }
        $arr = array_merge($arr);
        return $arr;
    }

