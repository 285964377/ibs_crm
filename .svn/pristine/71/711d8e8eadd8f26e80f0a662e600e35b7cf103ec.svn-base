<?php
/**
 *  商品管理
 */

namespace Home\Controller;
class GoodsController extends BackController
{
    public function index()
    {
        if ($_GET['index']) {
            $this->display();
        }
        if ($_GET['search_data']) {
            $page = (I('get.page') != '') ? I('get.page') - 1 : 0;    //页码
            $num = (I('get.limit') != '') ? I('get.limit') : 10;        //每页条数
            $data = M('goods')->limit($num * $page, $num)->select();
            foreach ($data as $k => $v) {
                switch ($v['status']) {
                    case 1;
                        $data[$k]['status'] = '上架';
                        break;
                    case 2;
                        $data[$k]['status'] = '下架';
                        break;
                }
            }
            $list['code'] = 200;
            $list['data'] = $data;
            echo json_encode($list, true);
        }
    }

    //添加商品
    public function add()
    {
        if (IS_POST) {
            $data = $_POST;
            $goods = M('goods')->where(['name' => $data['name']])->find();
            if ($goods) {
                echo json_encode(["code" => "ERROR", "msg" => "商品名称不能重复!"], true);
                exit;
            }
            //操作人
            $user = M('user')->where(['id' => session('user')])->find();
            M('goods')->add($data);
            $content = "{$user['name']}" . '添加商品:' . "{$data['name']}";
            $this->op_log($content);
            $list['code'] = 200;
            $list['msg'] = '添加成功';
            echo json_encode($list, true);
            die;
        }
    }

    //详情
    public function details()
    {
        $id = I('post.id');
        if ($id) {
            $data = M('goods')->where(['id' => $id])->find();
            $this->assign('data', $data);
            $this->display();
        } else {
            $list['code'] = "ERROR";
            $list['msg'] = '参数错误';
            echo json_encode($list, true);
            die;
        }


    }

    public function edit()
    {
        $id = I('post.id');
        if (IS_POST) {
            $data = $_POST;
            //操作人
            $user = M('user')->where(['uid' => session('user')])->find();
            $content = "{$user['name']}" . '修改商品:' . "{$data['name']}";
            $this->op_log($content);
            M('goods')->where(['id' => $id])->save($data);
        }
    }

    public function delete()
    {
        $id = I('post.id');
        if ($id){

            //操作人
            $user = M('user')->where(['id'=>session('user')])->find();
            //被删除的商品
            $goods = M('goods')->where(['id'=>$id])->find();
            $list['code'] = 200;
            $list['msg'] = '删除成功';
            $content = "{$user['name']}" . '删除商品:' . "{$goods['name']}";
            $this->op_log($content);
            M('goods')->where(['id' => $id])->delete();
            echo json_encode($list, true);
            die;
        }else{
            $list['code'] = "ERROR";
            $list['msg'] = '参数错误';
            echo json_encode($list, true);
            die;
        }
    }

    // 上架&下架
    public function status()
    {
        $id = I('post.id');
        $data['status'] = I('post.status');
        if ($data['status'] == 1) {
            $msg = "解冻";
        } else {
            $msg = "冻结";
        }
        M('user')->where('id=' . $id)->save($data);
        echo json_encode(["code" => 200, "msg" => $msg . '成功'], true);
        die;
    }
}