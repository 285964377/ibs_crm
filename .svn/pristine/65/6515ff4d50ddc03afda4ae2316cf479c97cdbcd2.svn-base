        }
		$re=M('user')->where('uid=' . $id)->find();
        M('user')->where('uid=' . $id)->save($data);
		$content = $msg. '员工:' .$re['name'];
		$this->op_log($content);
        echo json_encode(["code" => 200, "msg" => $msg . '成功'], true);
		exit;
