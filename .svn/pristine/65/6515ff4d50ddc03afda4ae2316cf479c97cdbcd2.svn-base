	    //删除员工
    public function delete()
    {
        $id = I('post.id');
        if ($id) {
            //被删除人信息
            $pas_uer = M('user')->where(['uid'=>$id])->find();
            M('group_access')->where(['uid' =>$id])->delete();
            M('user')->where(['uid' => $id])->delete();
			$content = '删除员工:' . "{$pas_uer['name']}";
            $this->op_log($content);
            $list['code'] = 200;
